azul = #22BCE0
plomo_claro_a = #ededed
plomo_claro_b = #dbdbdb
plomo_medio = #bebebe
plomo_oscuro = #9e9e9e
oscuro = #626262
color_borde = #00273A
color_menu =  90deg, rgb(10,120,120) 0%, rgb(16,205,239) 100%
sombra_lateral = 0px 0px 12px rgba(0, 0, 0, 0.5)
altomenu = 26px
TitleSize = 3.2em
backgroundColor = #333
//textColor = white
//backgroundColor = #ffe
textColor = #333
a
  text-decoration none
  
body
  background-color #F7F6F5
  font-size 16px
  font-family "Philosopher", arial
  margin 0 auto
  font-weight 350%

header
  background rgba(plomo_claro_a, 0.2)
  box-shadow 0 5px 0 rgba(0,0,0,0.2)  
  overflow hidden
  position relative
  vertical-align center
  z-index 2

  .headerlogo
    background transparent
    img
      width 100%
      height 100px

.button-none
  background transparent
  border 0
  outline 0px
  
.btnsort
  cursor pointer
  font-size 0.8em
  font-weight bold
  padding 1px 4px
  border 1px solid transparent
  
.container
.row
  margin 0 auto
  width 100%
  margin-left 0px
  margin-right 0px
  
.formlog
  background-color rgba(white, 0.99)
  box-shadow sombra_lateral
  border-radius 0.3em
  padding 0.5em
  position absolute
  top 0
  left 0
  margin-top 1em

.headopt
  margin-bottom 3px
    
.contenedor
  background-color rgba(white, 0.99)
  font-size 0.9em
  -moz-box-shadow sombra_lateral
  -webkit-box-shadow sombra_lateral
  box-shadow sombra_lateral
  margin 0 auto
  margin-bottom 75px
  width 80%
    
  .category
    margin-bottom 1em
    
    img
      border-radius 0.5em
      border 1px solid rgba(color_borde, 0.5)
      height 200px
      width 200px
      
      &:hover
        -webkit-transition: -webkit-transform .3s ease-out;
        -o-transition:      -o-transform .3s ease-out;
        transition:         transform .3s ease-out;
        -webkit-transform: translate(0, -0.5em);
        -ms-transform: translate(0, -0.5em);
        -o-transform: translate(0, -0.5em);
        transform: translate(0, -0.5em);
        
  .iconsab
    //color rgba(color_borde, 0.75)
    font-size 2.5em
    padding 0.3em
    background rgba(color_borde, 0.05)

.navbar
  background-image -moz-linear-gradient(color_menu)
  background-image -ms-linear-gradient(color_menu)
  background-image -webkit-linear-gradient(color_menu)
  border: 0px;
  border-radius 0px

  &:before
    border-bottom altomenu solid transparent
    border-left 12px solid white
    border-top altomenu solid transparent
    content ""
    left 0px
    position absolute
    top 0
    
.navbar-brand
  display none
  
.navbar-default .navbar-nav > li > a
  color white

.navbar-default .navbar-nav > li > a:hover
.navbar-default .navbar-nav > li > a:focus
  color white
  background rgba(black,0.2)
  
.navbar-default .navbar-nav > .active > a
.navbar-default .navbar-nav > .active > a:hover
.navbar-default .navbar-nav > .active > a:focus
  color white
  background rgba(black,0.3)

.text-muted
  color color_borde
  font-family "Lobster", cursiva
  font-size TitleSize
  text-shadow 1px 5px 0 #ddd

footer
  background-image -moz-linear-gradient(color_menu)
  background-image -ms-linear-gradient(color_menu)
  background-image -webkit-linear-gradient(color_menu)
  border-top 5px solid rgba(0,153,255,0.2)
  bottom 0px
  color white
  padding 5px
  position fixed
  text-align center
  width 100%
  
  span
    display block
    a
      font-weight bold

//------------Inicio de los estilos del cuadro de dialogo-----------
.dialogml
  position fixed
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%

.dialogml-overlay
  position absolute
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color #000000
  opacity 0.8

.dialogml-dialog
  z-index 10000
  position absolute
  top 50%
  left 50%
  width 50%
  transform translate(-50%, -50%)
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  background-color #fff
  border-radius 0.3em
  box-shadow 4px 4px 80px #000
  -webkit-box-shadow 4px 4px 80px #000
  -moz-box-shadow 4px 4px 80px #000
  -ms-box-shadow 4px 4px 80px #000
  -o-box-shadow 4px 4px 80px #000
  padding 10px
  .price-old
    text-decoration line-through

.dialogml-dialog-content
  overflow hidden
  height 100%

.dialogml-close
  position absolute
  top 3px
  right 5px
  cursor pointer
  font-size 1em
  padding 5px
  display inline-block

.dialogml-title
  font-weight bold
  font-size 1.2em
  display block
  margin-bottom 10px
  padding-bottom 7px
  border-bottom solid 1px #999

//------------Fin de los estilos del cuadro de dialogo-----------

@media screen and (max-width: 768px)
  .contenedor
    width 100%
  
  .headerlogo
  .socialmedia
    display none
  .text-muted
    font-size 2em
    margin-top 5px
      
  .navbar-brand
    display block
    position relative
    img
      position absolute
      top 1px
      left 15px
      width 90px
      height 48px
  .dialogml-dialog
    z-index 10000
    position absolute
    top 50%
    left 50%
    width 95%
    
